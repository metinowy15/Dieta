<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "myfirstapp"
        version     = "1.0.0" >
 
    <name>Dieta</name>
    <description>uzywanie bazy danych</description>
    <author href="http://mypersonalwebsite.com" email=" ">
        Koziol Ziom i Rozumny Indyk
    </author>
    <platform name="android" />
    <plugin name="cordova-plugin-device" spec="~1.1.4" />
    <plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.2" />
<plugin name="cordova-plugin-splashscreen" spec="~4.0.2" />
   
    <platform name="android">
        <icon src="www/img/icon.png" density="ldpi" />
        <icon src="www/img/icon.png" density="mdpi" />
        <icon src="www/img/icon.png" density="hdpi" />
        <icon src="www/img/icon.png" density="xhdpi" />
        <icon src="www/img/icon.png" density="xxhdpi" />
        <icon src="www/img/icon.png" density="xxxhdpi" />
        <splash src="www/img/splash.png" density="land-hdpi"/>
        <splash src="www/img/splash.png" density="land-ldpi"/>
        <splash src="www/img/splash.png" density="land-mdpi"/>
        <splash src="www/img/splash.png" density="land-xhdpi"/>
        <splash src="www/img/splash.png" density="land-xhdpi"/>
        <splash src="www/img/splash.png" density="land-xhdpi"/>
        <splash src="www/img/splash.png" density="port-hdpi"/>
        <splash src="www/img/splash.png" density="port-ldpi"/>
        <splash src="www/img/splash.png" density="port-mdpi"/>
        <splash src="www/img/splash.png" density="port-xhdpi"/>
        <splash src="www/img/splash.png" density="port-xxhdpi"/>
        <splash src="www/img/splash.png" density="port-xxxhdpi"/>
    </platform>
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="10000" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />
   
 
</widget>